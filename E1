<script>


function chrisColor(){
  HeadStyle.color = "#c54245"
  document.body.style.background = "#00873E"
  subStyle.color = "#c54245"
  textStyle.border = "5px solid black"
  textStyle.backgroundColor = "silver"
}

function hollowColor(){
  HeadStyle.color = "#E66C2C"
  document.body.style.background = "black"
  subStyle.color = "#522F6A"
  textStyle.border = "5px solid silver"
  textStyle.backgroundColor = "white"
}

function eastColor(){
  HeadStyle.color = "#e6a2c1"
  document.body.style.background = "#FDEB9D"
  subStyle.color = "#e6a2c1"
  textStyle.border = "5px solid silver"
  textStyle.backgroundColor = "#3Ed1EE"

}


var Header = document.getElementById("para1")
var HeadStyle = Header.style
para1.setAttribute("style", "position: relative")
HeadStyle.fontSize = "400%"
HeadStyle.left = "400px"
HeadStyle.right = "400px"

var Sub = document.getElementById("para2")
var subStyle = Sub.style;
para2.setAttribute("style", "position: relative")
subStyle.left = "600px"
subStyle.fontSize = "200%"


var Text = document.getElementById("para3")
var textStyle = Text.style;
para3.setAttribute("style", "position: relative")
